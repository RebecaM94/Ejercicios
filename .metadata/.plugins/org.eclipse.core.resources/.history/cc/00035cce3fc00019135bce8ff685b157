#include "hal_data.h"
#include "FilterStateMachine.h"

int state = 0;
bool TriggerCnt = 0;

void FilterStateMachine(ioport_level_t btnstate)
{
    switch (state)
    {
        case 0:
            TriggerCnt = 0; //acciones internas
            if (btnstate == HIGH) //condiciones de salida
            {
               state = 1;
            }
            break;

        case 1:
            TriggerCnt = 0; //acciones internas
            if (btnstate == LOW) // condiciones de salida
            {
                state = 0;
            }

            break;

        case 2:
            TriggerCnt = 1;
            state = 3;
            break;

        case 3:
            TriggerCnt = 0;

            break;
    }
}
